<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">felipe</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost/sigfap</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.default_schema">public</property>
        <property name="hibernate.dialect">com.sigfap.admin.model.dao.SpecificPostgreSQLDialect</property>
             
       

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        
        <property name="hibernate.current_session_context_class">thread</property>
        
        <mapping class="com.sigfap.admin.model.entity.User"/>
        <mapping class="com.sigfap.admin.model.entity.Address"/>
        <mapping class="com.sigfap.admin.model.entity.City"/>
        <mapping class="com.sigfap.admin.model.entity.Country"/>
        <mapping class="com.sigfap.admin.model.entity.Institution"/>
        <mapping class="com.sigfap.admin.model.entity.Representative"/>
        <mapping class="com.sigfap.admin.model.entity.Research"/>
        <mapping class="com.sigfap.admin.model.entity.Sector"/>
        <mapping class="com.sigfap.admin.model.entity.Skill"/>
        <mapping class="com.sigfap.admin.model.entity.State"/>
        <mapping class="com.sigfap.admin.model.entity.Telephone"/>
        <mapping class="com.sigfap.admin.model.entity.Unit"/>
        <mapping class="com.sigfap.admin.model.entity.Ethnicity"/>
        
        
    </session-factory>
</hibernate-configuration>
